@model CharacterModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Character Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Character</h4>
    <hr />
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.HealthOutput)
            </dt>
            <dd class="col-10">
            @Html.DisplayFor(model => model.HealthOutput)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Users)
            </dt>
            <dd class="col-10">
            @foreach(var user in Model.Users)
            {
                @(user.UserName + "(" + user.Tier + ")")
                <br>
            }
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.PowerOutput)
            </dt>
            <dd class="col-10">
            @Html.DisplayFor(model => model.PowerOutput)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.RankOutput)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.RankOutput)
            </dd>
        </dl>
</div>
<div>
    @if (User.IsInRole("user"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>

        @:&nbsp;|&nbsp;
    }    <a asp-action="Index">Back to List</a>
</div>



