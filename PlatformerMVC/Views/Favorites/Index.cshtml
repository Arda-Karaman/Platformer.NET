@model IEnumerable<FavoriteModel>

@{
    ViewData["Title"] = "Favorites";
}
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Clear">Clear Favorites</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CharacterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CharacterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RankOutput)
                </td>
                <td>
                    <a asp-action="Remove" asp-route-characterId="@item.CharacterId">Remove from Favorites</a>
                </td>
            </tr>
        }
    </tbody>
</table>